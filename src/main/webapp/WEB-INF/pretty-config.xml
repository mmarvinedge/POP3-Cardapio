<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    
    <url-mapping id="consulta">
        <pattern value="/situacao/pedido/#{pedido}" />
        <view-id value="/consulta.jsf" />
    </url-mapping>
    
    
    <url-mapping id="indice">
        <pattern value="/#{id}" />
        <view-id value="/index.jsf" />
    </url-mapping>
    <url-mapping id="indice2">
        <pattern value="/#{id}" />
        <view-id value="/index.xhtml" />
    </url-mapping>
    
    <url-mapping id="indice3">
        <pattern value="/#{id}/" />
        <view-id value="/index.jsf" />
    </url-mapping>
    <url-mapping id="indice4">
        <pattern value="/#{id}/" />
        <view-id value="/index.xhtml" />
    </url-mapping>
        

        
    <url-mapping id="name">
        <pattern value="/rest/#{name}" />
        <view-id value="/index.jsf" />
    </url-mapping>
    <url-mapping id="name2">
        <pattern value="/rest/#{name}" />
        <view-id value="/index.xhtml" />
    </url-mapping>
    
    <url-mapping id="name3">
        <pattern value="/loja/#{name}" />
        <view-id value="/index2.jsf" />
    </url-mapping>
    
    


    <url-mapping id="name3">
        <pattern value="/rest/#{name}/" />
        <view-id value="/index.jsf" />
    </url-mapping>
    <url-mapping id="name4">
        <pattern value="/rest/#{name}/" />
        <view-id value="/index.xhtml" />
    </url-mapping>
        
        
    <url-mapping id="name">
        <pattern value="/rest/#{name}/menu/#{menu}" />
        <view-id value="/index.jsf" />
    </url-mapping>
    

    

</pretty-config>